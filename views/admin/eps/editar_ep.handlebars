{{#if artista}}
<form class='form' action="/artistas/{{artista._id}}/eps/editar_ep/{{ep._id}}/salvar" method="POST">
    <div class='control'>
        <h1>
            Editar Ep
        </h1>
    </div>

  <div class="input-file-container">  
    <input class="input-file" id="imagem" name="imagem" type="file" accept="image/*">
    <label tabindex="0" for="my-file" class="input-file-trigger">Selecione uma imagem</label>
  </div>

    <div class='control block-cube block-input'>
        <input id="nome" name='nome' placeholder='Nome' type='text' value="{{ep.nome}}">
        <div class='bg-top'>
            <div class='bg-inner'></div>
        </div>
        <div class='bg-right'>
            <div class='bg-inner'></div>
        </div>
        <div class='bg'>
            <div class='bg-inner'></div>
        </div>
    </div>

    <div class='control block-cube block-input'>
        <input id="ano_lancamento" name='ano_lancamento' placeholder='Ano de Lançamento' type='text'
            value="{{ep.ano_lancamento}}">
        <div class='bg-top'>
            <div class='bg-inner'></div>
        </div>
        <div class='bg-right'>
            <div class='bg-inner'></div>
        </div>
        <div class='bg'>
            <div class='bg-inner'></div>
        </div>
    </div>

    <div class='control block-cube block-input'>
        <input id="gravadora" name='gravadora' placeholder='Gravadora' type='text'
            value="{{ep.gravadora}}">
        <div class='bg-top'>
            <div class='bg-inner'></div>
        </div>
        <div class='bg-right'>
            <div class='bg-inner'></div>
        </div>
        <div class='bg'>
            <div class='bg-inner'></div>
        </div>
    </div>

    <button class='btn block-cube block-cube-hover' onclick="addCampoEp()" type='button'>
        <div class='bg-top'>
            <div class='bg-inner'></div>
        </div>
        <div class='bg-right'>
            <div class='bg-inner'></div>
        </div>
        <div class='bg'>
            <div class='bg-inner'></div>
        </div>
        <div class='text'>
            Adicionar Música
        </div>
    </button>

    {{#each ep.lista_musicas}}
    <div class='control block-cube block-input'>
        <input id="lista_musicas{{@index}}" name='lista_musicas{{@index}}' placeholder='Faixa' type='text' value="{{this}}">
        <div class='bg-top'>
            <div class='bg-inner'></div>
        </div>
        <div class='bg-right'>
            <div class='bg-inner'></div>
        </div>
        <div class='bg'>
            <div class='bg-inner'></div>
        </div>
    </div>
    {{/each}}

    <div id='inputFields'></div>

    <button type="submit" class='btn block-cube block-cube-hover'>
        <div class='bg-top'>
            <div class='bg-inner'></div>
        </div>
        <div class='bg-right'>
            <div class='bg-inner'></div>
        </div>
        <div class='bg'>
            <div class='bg-inner'></div>
        </div>
        <div class='text'>
            Salvar
        </div>
    </button>
    {{/if}}
</form>